#include <stdio.h>

float maximum(float x, float y, float u)
{
  float h;
  if ((x>y)&&(x>u))
  {
    h = x;
    printf("1");
  }
  else
  {
    if ((y>x)&&(y>u))
    {
      h = y;
      printf("2");
    }
    else
    {
    h = u;
    printf("3");
    }
  }
  return (h);
}

float minimum(float x, float y, float u)
{
  float h;
  if ((x<y)&&(x<u))
  {
    h = x;
    printf("1");
  }
  else
  {
    if ((y<x)&&(y<u))
    {
      h = y;
      printf("2");
    }
    else
    {
    h = u;
    printf("3");
    }
  }
  return (h);
}


int main()
{
  float a, b, c, s, i, o;
  printf("a= ");
  scanf("%f", &a);
  printf("b= ");
  scanf("%f", &b);
  printf("c= ");
  scanf("%f", &c);
  s = a+b+c;
  if ((maximum(a,b,c)/2) == 0)
  {
    o =(maximum(a,b,c)/s)*100;
    maximum(a, b, c);
    printf("\n %f percent", o);
  }
  else
  {
    i = (maximum(a, b, c)-minimum(a, b, c));
    maximum(a, b, c);
    minimum(a, b, c);
    printf("Raznica = %f \n" , i);
  }
  return 0;
}
